.main
  .registerAddress
    発送元・お届け先住所入力
  .addressForm
    - hissuTag = "必須"
    = form_for @address, url:step6_registrations_path do |f|
    
      .formNameZenkaku
        %p.titleBold お名前
        %span.hissuTag #{hissuTag}
        = f.text_field :first_name_zenkaku, placeholder: "例)山田", class: "zenkakuFirst formareaBig"
        = f.text_field :last_name_zenkaku, placeholder: "例)彩", class: "zenkakuLast formareaBig"
        - if @address.errors.any?
          %ul.errorMessages5
            - @address.errors.full_messages_for(:first_name_zenkaku).each do |message|
              %li= message
        - if @address.errors.any?
          %ul.errorMessages5
            - @address.errors.full_messages_for(:last_name_zenkaku).each do |message|
              %li= message        
      .formNameKana.topmargin
        %p.titleBold お名前カナ
        %span.hissuTag #{hissuTag}
        = f.text_field :first_name_kana, placeholder: "例)ヤマダ", class: "kanaFirst formareaBig"
        = f.text_field :last_name_kana, placeholder: "例)アヤ", class: "kanaLast formareaBig"
        - if @address.errors.any?
          %ul.errorMessages5
            - @address.errors.full_messages_for(:first_name_kana).each do |message|
              %li= message
        - if @address.errors.any?
          %ul.errorMessages5
            - @address.errors.full_messages_for(:last_name_kana).each do |message|
              %li= message                      
      .formPostNumber.topmargin
        %p.titleBold 郵便番号
        %span.hissuTag #{hissuTag}
        = f.text_field :post_number, placeholder: "例)123-4567", class: "postNumber formareaBig"
        - if @address.errors.any?
          %ul.errorMessages5
            - @address.errors.full_messages_for(:post_number).each do |message|
              %li= message     
      .formPrefecture.topmargin
        
        %p.titleBold 都道府県
        %span.hissuTag #{hissuTag}
      = f.collection_select :prefectures, Prefecture.all, :id, :name
      - if @address.errors.any?
        %ul.errorMessages5
          - @address.errors.full_messages_for(:prefectures).each do |message|
            %li= message   
      .formCity.topmargin
        
        %p.titleBold 市区町村
        %span.hissuTag #{hissuTag}
        = f.text_field :city, placeholder: "例)横浜市緑区", class: "addressCity formareaBig"
        - if @address.errors.any?
          %ul.errorMessages5
            - @address.errors.full_messages_for(:city).each do |message|
              %li= message     
      .formBunchi.topmargin
      
        %p.titleBold 番地
        %span.hissuTag #{hissuTag}
        = f.text_field :addresses_banchi, placeholder: "例)青山1-1-1", class: "addressBanchi formareaBig"
        - if @address.errors.any?
          %ul.errorMessages5
            - @address.errors.full_messages_for(:addresses_banchi).each do |message|
              %li= message     
      .formBuilding.topmargin
        
        %p.titleBold 建物名
        %span.notHissu 任意
        = f.text_field :build_name, placeholder: "例)柳ビル103", class: "addressBuilding formareaBig"
        - if @address.errors.any?
          %ul.errorMessages5
            - @address.errors.full_messages_for(:build_name).each do |message|
              %li= message     
      .formPhoneNumber.topmargin
      
        %p.titleBold 電話
        %span.notHissu 任意
        = f.text_field :phone_number, placeholder: "例)09012345678", class: "addressTEL formareaBig"
        - if @address.errors.any?
          %ul.errorMessages5
            - @address.errors.full_messages_for(:phone_number).each do |message|
              %li= message     
      = f.submit "次へ進む", class: "submitbtn"

